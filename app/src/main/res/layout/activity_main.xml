<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.ariqadyavi_1202153376_modul4.MainActivity">

    <TextView
        android:id="@+id/namaMhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="List Nama Mahasiswa"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonList"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namaMhs"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="mulai"
        android:text="Mulai AsyncTask"
        android:textColor="@android:color/background_light" />

    <ListView
        android:id="@+id/listMh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonList">

    </ListView>

</RelativeLayout>
